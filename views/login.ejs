<%- include ('partials/header') -%>
<style>
    .spinner-border {
        border-color: #10B981 transparent transparent transparent;
        border-width: 4px;
    }
</style>


    <main>
        <section class="flex justify-center ">
            <div class="max-page-width flex flex-col gap-3 md:gap-6 px-4 md:px-0 sm:w-[80%] md:w-[70%] lg:w-[40%] mt-28 sm:mt-36 mb-14 md:mb-24 lg:mb-24">
                <h1 class="text-3xl md:text-4xl font-medium text-center px-4 md:px-0">Login to Kreate</h1>

                <%- include ('partials/flashError') -%>

                <form action="/login" method="post" id="loginForm" class="border p-3 md:p-8 flex flex-col gap-2 md:gap-6 rounded-md">
                    <div class="flex flex-col gap-2 md:gap-6 md:justify-between">
                        <div class="w-[100%] flex flex-col gap-2">
                            <label class="font-medium" for="email"> Email</label>
                            <input class="border rounded-md h-12 focus:outline-none focus:border-[#10B981] px-6" type="email" name="email" id="email" placeholder="Enter your email" required>
                        </div>

                        <div class="w-[100%] flex flex-col gap-2">
                            <label class="font-medium" for="password">Password</label>
                            <div class="relative">
                                <input class="border rounded-md w-full h-12 focus:outline-none focus:border-[#10B981] px-6" type="password" name="password" id="password" placeholder="Password" required>

                                <button type="button" id="toggleLoginPassword" class="absolute top-0 right-0 px-2 py-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button class="bg-[#10B981] text-center text-white font-medium w-[100%] py-2 rounded-md mt-2 md:mt-0" type="submit">Login</button>
                    <div class="flex justify-center mt- gap-2">
                        <h3>forgot your password?</h3>
                        <a href="reset-password" class="underline text-[#10B981]">Click here</a>
                    </div>
                    
                    <div class="flex justify-center mt-8 gap-2">
                        <h3>Don't have an account?</h3>
                        <a href="signup" class="underline text-[#10B981]">Sign Up</a>
                    </div>
                </form>
            </div>
        </section>
        <!-- Spinner element -->
        <div id="spinner" class="flex-col hidden fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
            <div class="spinner-border animate-spin inline-block w-16 h-16 border-8 rounded-full text-green-500"></div>
            <p class="text-white">Logging in...</p>
        </div>
    </main>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const loginForm = document.getElementById('loginForm');
            const spinner = document.getElementById('spinner');
    
            loginForm.addEventListener('submit', function (event) {
                spinner.classList.remove('hidden');
            });

            const toggleLoginPassword = document.getElementById('toggleLoginPassword');
            toggleLoginPassword.addEventListener('click', function() {
                const passwordField = document.getElementById('password');
                const fieldType = passwordField.getAttribute('type');
                const newType = fieldType === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', newType);
            });
        });
    </script>
    
</body>
</html>