<% if (success_msg && success_msg.length > 0) { %>
    <div class="flash-message text-center bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= success_msg %></span>
    </div>
<% } %>
<% if (error_msg && error_msg.length > 0) { %>
    <div class="flash-message text-center alert alert-error bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
        <span class="block sm:inline"><%= error_msg %></span>
    </div>
<% } %>


<script>
    document.addEventListener('DOMContentLoaded', function() {
    // Select all flash message elements
    const flashMessages = document.querySelectorAll('.flash-message');

    // Loop through each flash message element
    flashMessages.forEach(function(message) {
        // Hide the flash message after 4 seconds
        setTimeout(function() {
            message.style.display = 'none';
        }, 4000); 
    });
});

</script>